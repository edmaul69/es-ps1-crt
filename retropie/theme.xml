<theme>
	<formatVersion>4</formatVersion>
	<include>./../theme.xml</include>

<feature supported="carousel">
  
   <view name="system">
      <carousel name="systemcarousel">
        <type>vertical</type>
        <pos>0.00 0.050</pos>
        <size>0.700 0.72</size>
        <logoScale>2.1</logoScale>
        <logoSize>0.30 0.2</logoSize>
        <color>00000000</color>
        <maxLogoCount>3</maxLogoCount>
      </carousel>
      <image name="background" extra="true">
         <origin>0 0</origin>
         <pos>0 0</pos>
         <size>1 1</size>
         <path>./../_inc/images/background.png</path>
      </image>

       <image name="mainmenu" extra="true">
         <origin>1 0.5</origin>
         <pos>.90 0.10</pos>
         <maxSize>0.20 0.20</maxSize>
          <path></path>
      </image>
      <text name="systemInfo">
         <pos>0.0001 0.855</pos>
         <backgroundColor>00000000</backgroundColor>
         <color>FFFFFF</color>
         <fontPath>./_inc/fonts/RobotoCondensed-Light.ttf</fontPath>
	 <fontSize>0.065</fontSize>
      </text>
      		<text name="logoText">
			<fontPath>./_inc/fonts/RobotoCondensed-Light.ttf</fontPath>
			<color>FFFFFF</color>
			<forceUppercase>true</forceUppercase>
		</text>
   </view>
</feature>

	<view name="system, basic, detailed, video">
		<image name="logo">
			<path>./_inc/system.png</path>
		</image>
		<textlist name="gamelist">
         <selectorColor>0000ff50</selectorColor>
         <selectedColor>00ffff</selectedColor>
      </textlist>
    <textlist name="gamelist">
      <pos>0.025 0.2170</pos>
      <size>0.950 0.62</size>
      <alignment>center</alignment>
      <horizontalMargin>0.00</horizontalMargin>
      <forceUppercase>1</forceUppercase>
    </textlist>
      <helpsystem name="help">
	 <pos>0.070 0.870</pos>
         <textColor>FFFFFF</textColor>
         <iconColor>FFFFFF</iconColor>
         <fontPath>./../_inc/fonts/RobotoCondensed-Light.ttf</fontPath>
         <fontSize>0.03</fontSize>
      </helpsystem>
      <image name="background" extra="true">
         <origin>0 0</origin>
         <pos>0 0</pos>
         <size>1 1</size>
         <path>./../_inc/images/background3.png</path>
      </image>
	</view>

	<view name="system">
                <image name="systemsnap" extra="true">
                   <origin>0 .5</origin>
                   <pos>0.4 0.5</pos>
                   <maxSize>0.55 0.67</maxSize>
                   <zIndex>11</zIndex>
                   <path></path>
                </image>
                 <image name="systemlogo" extra="true">
                   <origin>.5 .5</origin>
                   <pos>.7 0.75</pos>
                   <maxSize>0.35 0.35</maxSize>
                   <zIndex>12</zIndex>
                   <path></path>
                </image>
	</view>
	
	<view name="basic">
      <image name="console" extra="true">
         <origin>.5 .5</origin>
         <pos>0.70 0.55</pos>
         <maxSize>0.35 0.35</maxSize>
         <path></path>
          <zIndex>50</zIndex>
         </image>
    <textlist name="gamelist">
      <pos>0.025 0.2170</pos>
      <size>0.950 0.62</size>
      <alignment>center</alignment>
      <horizontalMargin>0.00</horizontalMargin>
      <forceUppercase>1</forceUppercase>
    </textlist>
      <helpsystem name="help">
	 <pos>0.070 0.870</pos>
         <textColor>FFFFFF</textColor>
         <iconColor>FFFFFF</iconColor>
         <fontPath>./../_inc/fonts/RobotoCondensed-Light.ttf</fontPath>
         <fontSize>0.03</fontSize>
      </helpsystem>

    </view>
</theme>
